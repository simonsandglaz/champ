extends ../question

block question_category
	span Physical Health

block question
	h4 Have you lost 10% of your body weight (about 10-15 pounds) or more during the last 6 months?

block answers
	div(class='form-check')
		input(class='form-check-input' type='radio' id='radio1' name='answer' value='option1')
		label(class='form-check-label' for='answer1') No
	div(class='form-check')
		input(class='form-check-input' type='radio' id='radio2' name='answer' value='option2')
		label(class='form-check-label' for='answer2') Yes
	div(class='form-check')
		input(class='form-check-input' type='radio' id='radio3' name='answer' value='option3')
		label(class='form-check-label' for='answer3') I don't know